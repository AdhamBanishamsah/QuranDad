{
  "expo": {
    "name": "القرآن بصوت نظام بني شمسة",
    "slug": "quran-nizam",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icons/Assets.xcassets/AppIcon.appiconset/1024.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/icons/Assets.xcassets/AppIcon.appiconset/1024.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a1a2e"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.adhambanishamsah.qurannizam",
      "buildNumber": "2",
      "icon": "./assets/icons/Assets.xcassets/AppIcon.appiconset/1024.png",
      "infoPlist": {
        "UIBackgroundModes": [
          "audio"
        ],
        "NSMicrophoneUsageDescription": "This app needs access to microphone for audio playback controls.",
        "NSAppleMusicUsageDescription": "This app needs access to play audio in the background.",
        "CFBundleDisplayName": "القرآن بصوت نظام بني شمسة",
        "CFBundleName": "Quran by Nizam",
        "CFBundleShortVersionString": "1.0.0",
        "CFBundleVersion": "2",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.adhambanishamsah.qurannizam",
      "versionCode": 1,
      "icon": "./assets/icons/android/mipmap-xxxhdpi/ic_launcher.png",
      "adaptiveIcon": {
        "foregroundImage": "./assets/icons/android/mipmap-xxxhdpi/ic_launcher.png",
        "backgroundColor": "#1a1a2e"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.WAKE_LOCK",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ]
    },
    "web": {
      "favicon": "./assets/icons/Assets.xcassets/AppIcon.appiconset/32.png"
    },
    "plugins": [
      [
        "expo-av",
        {
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone for audio controls."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "bde34cee-a19e-40f2-b386-c859fe40368b"
      }
    },
    "owner": "adhambanishamsah"
  }
}
